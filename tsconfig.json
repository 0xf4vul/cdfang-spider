// https://www.tslang.cn/docs/handbook/compiler-options.html
{
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "baseUrl": ".",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "noImplicitReturns": true,
    //https://github.com/ant-design/ant-design/issues/8642
    "moduleResolution": "node"
  },
  // 影响webpack构建
  "include": ["src/**/*", "build/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
