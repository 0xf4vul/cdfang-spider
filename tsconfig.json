// https://www.tslang.cn/docs/handbook/compiler-options.html
{
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "noImplicitReturns": true
  },
  // 影响webpack构建
  "include": ["src/**/*", "build/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
