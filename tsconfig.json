// https://www.tslang.cn/docs/handbook/compiler-options.html
{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "target": "es5",
    "jsx": "react",
    "noImplicitReturns": true
  },
  "include": ["src/**/*", "__tests__/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
